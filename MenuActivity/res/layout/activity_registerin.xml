<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background" >
    <ImageView 
            android:id="@+id/user_new"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
			android:layout_height="80dp"
            android:gravity="center"
			android:src="@drawable/ic_launcher"

            />

    		<EditText
    		    android:id="@+id/message"
    		    android:layout_width="match_parent"
    		    android:layout_height="50sp"
    		    android:layout_marginTop="250dp"
    		    android:textSize="20sp"
    		    android:ems="10"
    		    android:typeface ="monospace"
    		    android:hint="@string/prompt_message"
    		    android:background="@null"
    		    android:inputType="phone"
    		    android:maxLines="1"
    		    android:singleLine="true" />

    		<Button
    		    android:id="@+id/message_register_in_button"
    		    style="?android:textAppearanceSmall"
    		    android:layout_width="wrap_content"
    		    android:layout_height="50sp"
    		    android:background="@drawable/button_new"
    		    android:layout_gravity="right"
    		    android:layout_marginTop="200dp"
    		    android:text="@string/action_message_in"
    		    android:typeface ="monospace"
    		    android:textSize="20sp"
    		    android:textStyle="bold" />

    		<Button
    		    android:id="@+id/register_in_button"
    		    style="?android:textAppearanceSmall"
    		    android:layout_width="match_parent"
    		    android:layout_height="50sp"
    		    android:background="@drawable/button_new"
    		    android:typeface ="monospace"
    		    android:layout_gravity="left"
    		    android:layout_marginTop="300dp"
    		    android:text="@string/action_register_in_next"
    		    android:textSize="20sp"
    		    android:textStyle="bold" />

    		<AutoCompleteTextView
    		    android:id="@+id/tel"
    		    android:layout_width="wrap_content"
    		    android:layout_height="50sp"
    		    android:typeface ="monospace"
    		    android:layout_marginTop="200dp"
    		    android:textSize="20sp"
    		    android:background="@null"
    		    android:ems="10"
    		    android:hint="@string/prompt_Tel"
    		    android:inputType="phone"
    		    android:maxLines="1"
    		    android:singleLine="true" />

</FrameLayout>
