<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background">

    <!-- Login progress -->

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/tel_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
					
        <ImageView 
            android:id="@+id/user_new2"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="25dp"
            android:layout_width="match_parent"
			android:layout_height="80dp"
            android:gravity="center"
			android:src="@drawable/ic_launcher"

            />
            <EditText
                android:id="@+id/register_password"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:textSize="20sp"
                android:background="@null"
                android:hint="@string/prompt_password"
                android:inputType="textPassword"
                android:typeface ="monospace"
                android:maxLines="1"
                android:singleLine="true" />

            <EditText
                android:id="@+id/register_password_repeat"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:typeface ="monospace"
                android:textSize="20sp"
                android:background="@null"
                android:imeActionId="@+id/login"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionUnspecified"
                android:hint="@string/prompt_password_repeat"
                android:inputType="textPassword"
                android:maxLines="1"
                android:singleLine="true" />


            <Button
                android:id="@+id/tel_register_in_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:typeface ="monospace"
    		    android:background="@drawable/button_new"
                android:layout_marginTop="10dp"
                android:text="@string/action_register_in"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
